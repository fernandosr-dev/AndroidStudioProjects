<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/text_sobrenome"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="90dp"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Insira seu sobrenome"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button_ola"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_nome" />

    <EditText
        android:id="@+id/text_nome"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="164dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="64dp"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Insira seu nome"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text_sobrenome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_ola"
        android:layout_width="174dp"
        android:layout_height="0dp"
        android:layout_marginBottom="187dp"
        android:gravity="center_horizontal|center_vertical"
        android:hint="OlÃ¡!"
        android:text="Button"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_sobrenome" />
</androidx.constraintlayout.widget.ConstraintLayout>